<phpunit backupGlobals="true"
         backupStaticAttributes="false"
         colors="true"
         bootstrap="phpunit-bootstrap.php"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true"
         syntaxCheck="true"
         verbose="true"
>

    <testsuites>
        <testsuite name="Parameters">
            <directory>./tests/Parameters</directory>
        </testsuite>
        <testsuite name="OptionBuilder">
            <directory>./tests/OptionBuilder</directory>
        </testsuite>
        <testsuite name="Files">
            <directory>./tests/Operations/Files</directory>
        </testsuite>
        <testsuite name="Misc">
            <directory>./tests/Misc</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>

            <exclude>
                <directory suffix=".php">vendor</directory>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-text" target="php://stdout"/>
    </logging>

    <php>
        <ini name="xdebug.auto_trace" value="0"/>
        <ini name="xdebug.cli_color" value="1"/>
        <ini name="xdebug.collect_assignments" value="0"/>
        <ini name="xdebug.collect_includes" value="0"/>
        <ini name="xdebug.collect_params" value="0"/>
        <ini name="xdebug.collect_return" value="0"/>
        <ini name="xdebug.collect_vars" value="0"/>
        <ini name="xdebug.coverage_enable" value="1"/>
    </php>
</phpunit>